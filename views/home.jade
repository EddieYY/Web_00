doctype html
html
  head
    title pageTitle
    link(href="/static/css/test.css" rel="stylesheet")
  body
 .daybox
  label
    input#switch_night(type="checkbox")
    .Top
      svg.temsvg
        text(x=0 y=70) 20°
        circle(cx=0 cy=70 r=3)
        text(x=50 y=80) 19°
        circle(cx=50 cy=80 r=3)
        text(x=100 y=90) 18°
        circle(cx=100 cy=90 r=3)
        text(x=150 y=70) 20°
        circle(cx=150 cy=70 r=3)
        text(x=200 y=90) 18°
        circle(cx=200 cy=90 r=3)
        text(x=250 y=110) 16°
        circle(cx=250 cy=110 r=3)
        text(x=300 y=100) 17°
        circle(cx=300 cy=100 r=3)
        text(x=350 y=90) 18°
        circle(cx=350 cy=90 r=3)
        text(x=400 y=80) 19°
        circle(cx=400 cy=80 r=3)
        polyline(points="0,70 50,80 100,90 150,70 200,90 250,110 300,100 350,90 400,100")

      .text_area
        .temperature 20°C
        .infos 
          .address 新竹市東區
          .time 星期三 下午9:00 局部有雲
      .moon
      .cloud
       .rain
    .Bottom
      .dayweather
        h3 MON
        svg(viewbox="-50 -50 100 100")
          circle.sun(cx=0 cy=0 r=22)
      .dayweather
        h3 THE
        svg(viewbox="-50 -50 100 100")
          circle.sun(cx=0 cy=0 r=22)
      .dayweather
        h3 WED
        svg(viewbox="-50 -50 100 100")
          circle.sun(cx=0 cy=0 r=22)
      .dayweather
        h3 THU
        svg(viewbox="-50 -50 100 100")
          circle.sun(cx=0 cy=0 r=22)
          circle.cloud(cx=0 cy=30 r=20)
          circle.cloud(cx=-15 cy=30 r=20)
          circle.cloud(cx=-30 cy=30 r=20)
          circle.cloud(cx=-25 cy=10 r=15)
          circle.cloud(cx=-7 cy=15 r=15)
      .dayweather
        h3 FRI
        svg(viewbox="-50 -50 100 100")
          circle.sun(cx=0 cy=0 r=22)
          circle.cloud(cx=0 cy=30 r=20)
          circle.cloud(cx=-15 cy=30 r=20)
          circle.cloud(cx=-30 cy=30 r=20)
          circle.cloud(cx=-25 cy=10 r=15)
          circle.cloud(cx=-7 cy=15 r=15)
      .dayweather
        h3 SAT
        svg(viewbox="-63 -30 100 100")
          circle.cloud(cx=0 cy=30 r=20)
          circle.cloud(cx=-15 cy=30 r=20)
          circle.cloud(cx=-30 cy=30 r=20)
          circle.cloud(cx=-25 cy=10 r=15)
          circle.cloud(cx=-7 cy=15 r=15)
      .dayweather
        h3 SUN
        svg(viewbox="-63 -30 100 100")
          line.rain(x1=-15,y1=40,x2=-15,y2=50)
          line.rain(x1=-35,y1=30,x2=-35,y2=40)
          line.rain(x1=5,y1=25,x2=5,y2=35)
          circle.cloud(cx=0 cy=30 r=20)
          circle.cloud(cx=-15 cy=30 r=20)
          circle.cloud(cx=-30 cy=30 r=20)
